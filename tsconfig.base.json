{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "ES2020",
    "module": "esnext",
    "lib": ["ES2021", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@watari/auth/domain": ["libs/auth/domain/src/index.ts"],
      "@watari/auth/feature-auth-page": [
        "libs/auth/feature-auth-page/src/index.ts"
      ],
      "@watari/category/domain": ["libs/category/domain/src/index.ts"],
      "@watari/connect/domain": ["libs/connect/domain/src/index.ts"],
      "@watari/connect/feature-connect-page": [
        "libs/connect/feature-connect-page/src/index.ts"
      ],
      "@watari/home/domain": ["libs/home/domain/src/index.ts"],
      "@watari/home/feature-home-page": [
        "libs/home/feature-home-page/src/index.ts"
      ],
      "@watari/shared/util-common": ["libs/shared/util-common/src/index.ts"],
      "@watari/shared/util-config": ["libs/shared/util-config/src/index.ts"],
      "@watari/shared/util-database": [
        "libs/shared/util-database/src/index.ts"
      ],
      "@watari/shared/util-domain": ["libs/shared/util-domain/src/index.ts"],
      "@watari/shared/util-metamask": [
        "libs/shared/util-metamask/src/index.ts"
      ],
      "@watari/shared/util-router": ["libs/shared/util-router/src/index.ts"],
      "@watari/transaction/domain": ["libs/transaction/domain/src/index.ts"],
      "@watari/transaction/feature-new-transaction-page": [
        "libs/transaction/feature-new-transaction-page/src/index.ts"
      ],
      "@watari/user/domain": ["libs/user/domain/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
